    </style>    <script>
        // Efeito de spotlight que segue o cursor na sidebar
        document.addEventListener('DOMContentLoaded', function() {
            const sidebar = document.querySelector('.sidebar');
            if (!sidebar) return;

            let mouseX = 0, mouseY = 0;
            let currentX = 0, currentY = 0;
            const smoothing = 0.15; // Suaviza√ß√£o do movimento

            sidebar.addEventListener('mousemove', function(e) {
                const rect = sidebar.getBoundingClientRect();
                mouseX = e.clientX - rect.left;
                mouseY = e.clientY - rect.top;
            });

            sidebar.addEventListener('mouseenter', function() {
                sidebar.style.setProperty('--spotlight-active', '1');
            });

            sidebar.addEventListener('mouseleave', function() {
                sidebar.style.setProperty('--spotlight-active', '0');
            });

            // Anima√ß√£o suave do spotlight
            function animate() {
                currentX += (mouseX - currentX) * smoothing;
                currentY += (mouseY - currentY) * smoothing;
                
                sidebar.style.setProperty('--mouse-x', currentX + 'px');
                sidebar.style.setProperty('--mouse-y', currentY + 'px');
                
                requestAnimationFrame(animate);
            }
            animate();
        });
    </script>
